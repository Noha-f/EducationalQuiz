<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:scaleType="fitXY"
                android:src="@drawable/worldwf" />

            <LinearLayout
                android:id="@+id/welcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Welcome"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center_horizontal"
                    android:hint="Please Enter Your Name"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:padding="5dp"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="25dp"
                    android:background="#90CAF9"
                    android:onClick="goToQuiz"
                    android:text="Start" />
            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/noha_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/population" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="(1) Which country has the largest population in the world?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/one_A"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="India" />

            <CheckBox
                android:id="@+id/one_B"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/one_C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="China" />

            <CheckBox
                android:id="@+id/one_D"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Brazil" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/river"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="(2) What is the longest river in the world?" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <RadioButton
                android:id="@+id/two_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mississippi"

                />

            <RadioButton
                android:id="@+id/two_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nile"

                />

            <RadioButton
                android:id="@+id/two_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazon" />

            <RadioButton
                android:id="@+id/two_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congo" />

        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/wonders"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="(3) The Great Pyramid of Giza is one of the ancient Seven Wonders of the World, in which country is it located?" />

        <EditText
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextstyle"
            android:hint=" ................. "
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:padding="5dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/francophone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="(4) Which two of the below countries have French as an official language?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/four_A"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Belgium" />

            <CheckBox
                android:id="@+id/four_B"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Algeria" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/four_C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Austria" />

            <CheckBox
                android:id="@+id/four_D"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Djibouti" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/languages"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="(5) What is the most spoken language in the world?" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <RadioButton
                android:id="@+id/five_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"

                />

            <RadioButton
                android:id="@+id/five_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"

                />

            <RadioButton
                android:id="@+id/five_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spanish" />

            <RadioButton
                android:id="@+id/five_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arabic" />

        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/turkey"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="(6) In which country is the Bosphorus bridge whick links Europe and Asia?" />

        <EditText
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextstyle"
            android:hint=" ................. "
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:padding="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#90CAF9"
            android:onClick="scoreCalculation"
            android:text="Score" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="25dp"
            android:background="#689F38"
            android:onClick="goToAnswers"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Check the right answers  >>"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Me" />

    </LinearLayout>

</ScrollView>