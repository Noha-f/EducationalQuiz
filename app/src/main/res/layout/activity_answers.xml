<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:id="@+id/welcoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score_result"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="(1) According to 2017 statistics, China has the worldâ€™s largest population (1.39 billion), followed by India (1.34 billion), followed by USA (326 million"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="25dp"
                android:onClick="goToQuiz"
                android:text="Start"
                android:background="#90CAF9"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>